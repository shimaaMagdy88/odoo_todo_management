<odoo>
    <record id="todo_task_report" model="ir.actions.report">
        <field name="name">Todo Task Report</field>
        <field name="model">todo.task</field>
        <field name="report_type">qweb-html</field>
        <field name="binding_model_id" ref="model_todo_task"/>
        <field name="binding_type">report</field>
        <field name="report_name">todo_management.todo_task_report_template</field>
    </record>

    <template id="todo_task_report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="o">
                    <style>
                        .container-div{
                            border: 1px solid black;
                            padding: 50px 40px;
                        }
                        label{
                            min-width: 160px;
                            font-weight: bold;
                            font-size: large;
                        }
                        .desc{
                            font-weight: bold;
                            color: black;
                        }
                        table{
                            width: 100%;
                            text-align: center;
                        }
                        table tr th{
                            font-size: 25px
                        }
                        th, td{
                            padding: 5px 0px;
                        }
                        .special-color{
                            background-color: lightgray;
                        }
                        .timesheet{
                            background-color: #333;
                            color: white;
                        }
                    </style>
                    <div class="container-div">
                        <div>
                            <label>TASK:</label>
                            <span t-field="o.name"/>
                            <br/>
                            <label>Due Date:</label>
                            <span t-field="o.due_date"/>
                            <br/>
                            <label>Assign To:</label>
                            <span t-field="o.partner_id"/>
                            <br/>
                            <label>Estimated Time:</label>
                            <span t-field="o.estimated_time"/> H
                            <br/> <br/>
                        </div>
                        <div>
                            <h4 class="desc">Description</h4>
                            <p t-field="o.description"/>
                            <br/>
                        </div>
                        <t t-if="o.timesheet_line_ids">
                            <table class="table-bordered text-center">
                                <thead>
                                    <tr>
                                        <th colspan="4" class="text-center timesheet">Timesheet</th>
                                    </tr>
                                    <tr class="special-color">
                                        <th>#</th>
                                        <th>Date</th>
                                        <th>Description</th>
                                        <th>Time</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="counter" t-value="0"/>
                                    <t t-foreach="o.timesheet_line_ids" t-as="line">
                                        <t t-set="counter" t-value="counter + 1"/>
                                        <tr>
                                            <td><t t-esc="counter"/></td>
                                            <td><t t-esc="line.date"/></td>
                                            <td><t t-esc="line.description"/></td>
                                            <td><t t-esc="line.hours"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th colspan="3" class="special-color">Total Time</th>
                                        <th><t t-esc="o.count_hours"/> H</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
